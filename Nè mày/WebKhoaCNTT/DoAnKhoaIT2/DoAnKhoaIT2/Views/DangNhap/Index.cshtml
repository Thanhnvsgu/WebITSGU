@model DoAnKhoaIT2.Models.TaikhoanModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Assets/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image:url('../../Assets/Login/images/Robot.png');background-position: center;background-repeat: no-repeat;background-size: cover">
            <div class="wrap-login100" style="background-image:url('../../Assets/Login/images/BlueWhite.jpg')">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Assets/Login/images/img-01.png" alt="IMG">
                </div>

                @using (Html.BeginForm("Index", "DangNhap", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title" style="font-weight:bold">
                        Đăng Nhập
                    </span>



                    <div class="wrap-input100 validate-input" data-validate="Bạn chưa nhập tài khoản">

                        @Html.TextBoxFor(model => model.UserName, new { @class = "input100", @type = "text", @name = "tentaikhoan", @placeholder = "Tài khoản" })

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Bạn chưa nhập mật khẩu">

                        @Html.TextBoxFor(model => model.Password, new { @class = "input100", @type = "password", @name = "matkhau", @placeholder = "Mật khẩu" })

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="checkbox col-lg-12">
                        @Html.CheckBoxFor(model => model.RememberMe, new { @name = "luumatkhau", @id = "luumatkhau", @type = "checkbox" }) Lưu mật khẩu
                    </div>
                    <script>
                        var x = document.getElementById('luumatkhau');
                            if(@Model.RememberMe);
                            var input = '@Model.RememberMe';
                            if (input == 'True') {
                                x.checked = "checked";
                            }

                    </script>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Đăng Nhập
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt2 col-1" style="color:black">
                            Quên
                        </span>
                        <a class="txt2" href="#">
                            Tài khoản / Mật khẩu?
                        </a>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger text-center" });
                    <div class="text-center p-t-100 txt2" style="color:black">
                        Công nghệ thông tin 2018
                    </div>
                }


            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Assets/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Assets/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Assets/Login/js/main.js"></script>
    <script src="~/Assets/Login/js/check_browser_close.js"></script>
    <script src="~/Assets/Login/js/jquerymin.js"></script>

</body>

</html>
