@model Models.ViewModel.Baidang_ThongTinNguoiDung
@{
    ViewBag.Title = "TuyenSinh1";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/Templates/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                         @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>@Html.ActionLink("Thông tin tuyển sinh", "TT_TS", "ThongTin_TS",new { maloai="TS"},null)</li>
                    <li>Tuyển sinh</li>
                </ul>
            </div>
            <div class="col-md-9" style="margin-right:400px ; margin-left: 0px">
                <div id="text-page" class="box" style="margin-right:-200px">
                    <h1 style="font-size:22px">@Model.Tentieude</h1>
                    <p>@Model.Noidung</p>
                    <hr />
                    <p>Đăng bởi: @Model.HoTen, Ngày: @Model.Ngaydang</p>
                    <p>Đính kèm:</p>
                    <ul>
                        @foreach (var item in ViewBag.List)
                        {
                            <li>@Html.ActionLink((string)item.TenFile, "Dowload", "ThongTin_TS", new { filepath = item.FilePath }, null)</li>
                        }
                    </ul>

                </div>
            </div>

        </div>  @*#content*@

    </div>
</body>



