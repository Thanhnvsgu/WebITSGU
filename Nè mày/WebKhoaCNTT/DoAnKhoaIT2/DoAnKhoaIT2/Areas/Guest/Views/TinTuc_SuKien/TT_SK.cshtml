@model PagedList.IPagedList<Models.ViewModel.BaidangViewModel>
    @using PagedList.Mvc
@{
    ViewBag.Title = "TT_SK";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="/Templates/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>Tin tức - Sự kiện</li>

                </ul>
            </div>
            <div class="col-sm-12" id="blog-listing">
                @foreach (var item in Model)
                {

                    <div class="post">
                        <h4>@Html.ActionLink(item.Tentieude, "Tin1", "TinTuc_SuKien")</h4>
                        <p>
                            @item.Noidung
                        </p>
                        <p class="read-more btn btn-primary"> @Html.ActionLink("Xem thêm", "Tin1", "TinTuc_SuKien", new { mabaidang = item.Mabaidang }, null) </p>
                    </div>

                }
            </div>

                @*<p class="read-more"> <a href="" class="btn btn-primary"> Xem thêm</a> </p>*@


            </div>
        <div class="col-sm-12">
           @Html.PagedListPager(Model ,page => Url.Action("TT_SK", new { page, maloai=ViewBag.Maloai}))



        </div>
    </div>

