@model PagedList.IPagedList<Models.EF.NDCongtacSV>
@using PagedList.Mvc
@{
    ViewBag.Title = "SV_Quytrinh";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/Templates/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>Sinh Viên</li>
                    <li>@ViewBag.TenCTSV</li>

                </ul>
            </div>
            <div class="col-sm-9" id="blog-listing">
                @foreach (var item in Model)
                {
                    <div class="post">
                        <h4>@Html.ActionLink(item.Tieude, "ThongTinCTSV", "SinhVien",new {tenctsv=@ViewBag.TenCTSV, mandct = item.MaNDCTSV ,mact=item.MaCTSV},null)</h4>
                        <p>
                            @item.NoidungCTSV
                        </p>
                        <p class="read-more btn btn-primary"> @Html.ActionLink("Xem thêm", "ThongTinCTSV", "SinhVien",new {mact = item.MaCTSV,mandct = item.MaNDCTSV, tenctsv = @ViewBag.TenCTSV }, null) </p>
                    </div>
                }




                @*<p class="read-more"> <a href="" class="btn btn-primary"> Xem thêm</a> </p>*@

                <div class="col-lg-12">
                    @Html.PagedListPager(Model, page => Url.Action("CTSV", new { page, mact = @ViewBag.MaCTSV ,tenctsv=ViewBag.TenCTSV}))
                </div>



            </div>

        </div>  @*#content*@






</body>

