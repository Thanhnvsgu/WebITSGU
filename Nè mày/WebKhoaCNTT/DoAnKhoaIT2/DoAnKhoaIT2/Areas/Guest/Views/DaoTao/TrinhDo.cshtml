
@model PagedList.IPagedList<Models.EF.NoidungDT>
@using PagedList.Mvc
@{
    ViewBag.Title = "TrinhDoDaiHoc";
    Layout = "~/Areas/Guest/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="/Templates/css/khungbentrai.css" rel="stylesheet" id="theme-stylesheet">
</head>
<body>
    <div id="content">

        <div class="container">

            <div class="col-sm-12">
                <ul class="breadcrumb">

                    <li>
                        @Html.ActionLink("Trang chủ", "Index", "Home")
                    </li>
                    <li>Đào tạo</li>
                    <li>@ViewBag.TenDT</li>
                </ul>
            </div>

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            <div class="col-sm-9" id="blog-listing" >
                @foreach (var item in Model)
                {
                    <div class="post">
                        <h4>
                            @Html.ActionLink(item.Tieude, "Thongtintrinhdo", "DaoTao", new { manddt = item.MaNDDT ,madt=item.MaloaiDT,tendt= @ViewBag.TenDT }, null)
                        </h4>
                        <p style="overflow:hidden;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical">@item.NoidungDT1</p>
                        <p class="read-more btn btn-primary">
                            @Html.ActionLink("Xem thêm", "Thongtintrinhdo", "DaoTao", new { manddt = item.MaNDDT, madt = item.MaloaiDT, tendt = @ViewBag.TenDT }, null)
                        </p>
                    </div>
                }


            
                <div class="col-lg-12">
                    @Html.PagedListPager(Model, page => Url.Action("TrinhDo", new { page, maloaidt = ViewBag.maloaidt }))
                </div>
           </div>
            <!-- /.col-md-9 -->
            <!-- *** LEFT COLUMN END *** -->
            <div class="col-md-3">
                <!-- *** BLOG MENU ***
                _________________________________________________________ -->
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Đào tạo</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="nav nav-pills nav-stacked">
                            <li> @Html.ActionLink("Trình độ đại học", "TrinhDo", "DaoTao", new { maloaidt = "DH" }, null)</li>
                            <li> @Html.ActionLink("Trình độ thạc sĩ", "TrinhDo", "DaoTao", new { maloaidt = "TS" }, null)</li>
                        </ul>
                    </div>

                </div>
                <!-- /.col-md-3 -->
                <!-- *** BLOG MENU END *** -->
                @*<div class="banner">
                        <img src="../../../cntt_media/khoa-cntt.jpg" alt="Khoa cntt" class="img-responsive">

                    </div>*@
            </div>


        </div>
        <!-- /.container -->
        <!-- /#content -->
    </div>

</body>



